<% include ../header.ejs %>
	<div class="container">
		<div class="row">
		<div class="col-sm-4"></div>
			<div class="col-sm-4">
				<% for(var i = 0, len = results.length; i < len; i++) { %>
				<div class="well resultsWell">
					<p>
						<h4><strong><a href="<%= results[i].link %>" class="white"><%= results[i].title %></a></strong></h4>
						<% if(results[i].authors !== undefined) { %>
							<p><%= results[i].authors %></p>
						<% } else { %>
							<p>No Author Listed</p>
						<% } %>
						<p><img src="<%= results[i].thumbnail %>" /></p>
					</p>
					<form action="/books/add" method="POST">
						<input type="hidden" name="user_id" value="<%= user.id %>">
						<input type="hidden" name="link" value="<%= results[i].link %>">
						<input type="hidden" name="thumbnail" value="<%= results[i].thumbnail %>">
						<input type="hidden" name="title" value="<%= results[i].title %>">
						<input type="submit" value="Add to Bookshelf" class="btn btn-default">
					</form>
				</div>
				<% } %>
			</div>
			<div class="col-sm-4"></div>
		</div>
		<!-- /.Row -->
	</div>
	<!-- /.Container -->
	<span id="top-link-block" class="hidden">
	    <a href="#top" class="well well-sm noBg"  onclick="$('html,body').animate({scrollTop:0},'slow');return false;">
	        <i class="glyphicon glyphicon-chevron-up"></i> Back to Top
	    </a>
	</span><!-- /top-link-block -->
<% include ../footer.ejs %>