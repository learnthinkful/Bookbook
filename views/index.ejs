    <div class="site-wrapper">

      <div class="site-wrapper-inner">

        <div class="cover-container">

          <div class="inner cover">
            <% if(!user) { %>
            	<h1 class="cover-heading white">Bookbook</h1>
            	<p class="lead white"><span class="glyphicon glyphicon-book"></span> Be Shelfish.</p>
							<p>
							<form method="POST" action="/sessions" class="form-inline">
								<input type="text" name="username" placeholder="Username" class="form-control customInput" id="exampleInputEmail2">
								<input type="password" name="password" placeholder="Password" class="form-control customInput" id="exampleInputPassword2">
								<input type="submit" class="btn btn-default" value="Login">
							</form>
							</p>
							<p class="lead white">
								Not a user? <a href="/users/new" class="clear">Register</a>
							</p>
						<% } else { %>
							<p>	
								<form method="GET" action="/books" class="form-inline">
									<input type="text" name="title" placeholder="Input keywords here..." class="form-control customInput">
									<input type="submit" value="Search" class="btn btn-books">
								</form>
							<p>
							<h3><a href="/books/list" class="clear">View Your Bookshelf</a></h3>
							<form action="/sessions?_method=DELETE" method="POST">
								<input type="submit" class="btn btn-books" value="Log out">
							</form>
						<% } %>

          </div>

          <div class="mastfoot">
            <div class="inner">
              <p>Bookbook 2014 | Be Shelfish</p>
            </div>
          </div>

        </div>

      </div>

    </div>