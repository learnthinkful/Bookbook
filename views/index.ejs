    <div class="site-wrapper">

      <div class="site-wrapper-inner">

        <div class="cover-container">

          <div class="inner cover">
            <% if(!user) { %>
            	<h1 class="cover-heading white">Bookbook</h1>
            	<p class="lead white">Be Shelfish.</p>
							<p>
							<form method="POST" action="/sessions" class="form-inline">
								<input type="text" name="username" placeholder="Username" class="form-control" id="exampleInputEmail2">
								<input type="password" name="password" placeholder="Password" class="form-control" id="exampleInputPassword2">
								<input type="submit" class="btn btn-default" value="Login">
							</form>
							</p>
							<p class="lead white">
								Not a user? <a href="/users/new">Register</a>
							</p>
						<% } else { %>
							<p><a href="/books/search">Search for a book</a></p>
							<p><a href="/books/list">View Your Bookshelf</a></p>
							<form action="/sessions?_method=DELETE" method="POST">
								<input type="submit" class="btn btn-default" value="Log out">
							</form>
						<% } %>

          </div>

          <div class="mastfoot">
            <div class="inner">
              <p>Bookbook 2014 | Be Shelfish</p>
            </div>
          </div>

        </div>

      </div>

    </div>